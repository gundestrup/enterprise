<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html
     PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
    "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
  
  <title>Enterprise NCC-1701-D - <%= controller.controller_name %> -> <%= controller.action_name %></title>    
    <%= javascript_include_tag :defaults %>
    <%= include_tiny_mce_if_needed %>
    <%= stylesheet_link_tag "application" %>    
    <%if session[:css] == 'lcard' %>
    <%= stylesheet_link_tag "lcars", :except => [ :rss, :atom ] %>
    <% end %>
        <% if session[:css] == 'iphone' %>
            <%= stylesheet_link_tag "iphone" %>
        <% end %>
        <% if session[:css] == 'n95' %>
            <%= stylesheet_link_tag "n95" %>
        <% end %>
        <% if session[:css] == 'e60' %>
            <%= stylesheet_link_tag 'e60' %>
        <% end %>
        <% if session[:css] == 'e60' %>
            <%= stylesheet_link_tag 'e60' %>
        <% end %>
</head>
<body>
<% tabnav :main do %>
    <div id="page">
        NCC-1701-D -> <%= link_to controller.controller_name %> <% if !controller.action_name == 'index' %>-> <%= link_to controller.action_name %><% end %> |          
          <% if session[:css] == 'n95' %><b>></b><% end %><%= link_to "N95",  :controller => controller.controller_name, :action => 'setcss', :css=>'n95' %>
          <% if session[:css] == 'iphone' %><b>></b><% end %><%= link_to "iphone", :controller => controller.controller_name,  :action => 'setcss', :css=>'iphone' %>
          <% if session[:css].to_s.length < 1 or session[:css] == 'normal' %><b>></b><% end %><%= link_to "Normal", :controller => controller.controller_name,  :action => 'setcss', :css=>'normal' %>
          <% link_to "lcars", :controller => controller.controller_name,  :action => 'setlayout', :layout =>'lcars' %>
          <% if session[:layout] != '' %>
          <% link_to "normal", :controller => controller.controller_name,  :action => 'setlayout', :layout=>' ' %>
              <% end %>          
      <div id="content">
          <p style="color: green"><%= flash[:notice] %></p>
          <p style="color: red"><%= flash[:error] %></p>          
        <%= yield  %>
      </div>
      <% end %>
      <div id="footer">&nbsp;
          <% if logged_in? %>
                 User status: <%= link_to h(current_user.login.capitalize), user_path(current_user) %>
                <% logged_in? && current_user.has_role?('administrator') %>
                     | <%= link_to 'Administrate', users_path %>

                 | <%= link_to 'User Profile', edit_user_path(current_user) %>
                 <br/>
                <% link_to 'Log out', logout_url %>
          <% end %>
    
            <a href="http://jigsaw.w3.org/css-validator/check/referer">Valid CSS!</a> |
            <a href="http://validator.w3.org/check?uri=referer">Valid XHTML 1.0 Strict</a> |
			<a href="https://bitbucket.org/gundestrup/enterprise">Source code</a>   		
      </div>
    </div>
  </body>
</html>
<%= tabnav :media %>
<p>
  <b>Name:</b>
  <%=h @location.name %>
</p>
<% if logged_in? %>
    <%= link_to 'Edit', edit_location_path(@location) %> |
    <%= link_to 'New', new_location_path %> |
<% end %>
<%= link_to 'Back', locations_path %>

<br/>

<table class="Table">
    <tr>
        <th>Movie</th><th>Category</th>
    </tr>
    <% for movie in @location.movies %>
        <tr>
            <td> <%= link_to movie.title, movie %></td><td><%= movie.category.name %></td>
        </tr>
    <% end %>
</table>
